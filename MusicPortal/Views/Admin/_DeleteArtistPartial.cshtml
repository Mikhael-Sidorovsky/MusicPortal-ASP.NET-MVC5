@model MusicPortal.Models.Artist


<div class="modal-content">
    <div class="modal-header bg-dark">
        <h5 class="modal-title text-white-50" id="dialogModalLabel">Delete artist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Artist</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

            </dl>

            @using (Html.BeginForm("DeleteArtist", null, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Delete artist" class="btn btn-info" />
                </div>
            }
        </div>
    </div>
</div>